<select id="county-select" onchange={{action "selectCounty" value="target.value"}}>
  <option value="">-- Select a County --</option>
  {{#each counties as |county|}}
    <option value={{county.id}}>{{county.county}}</option>
  {{/each}}
</select>

{{#if places}}
  {{place-selector places=places selectedAction=selectedAction getCityBoundary=(action getCityBoundary) updateMunicipality=(action updateMunicipality)}}
{{/if}}